	#generica {
		font-family: sans-serif;
	}

	#especifica {
		font-family: "Courier", serif;
	}

	#px {
		font-size: 35px
	}

	#em {
		font-size: 130%;
	}

	#cursiva {
		font-style: italic;
	}

	#altura {
		line-height: 35px;
	}

	#titulo {
		text-align: center;
	}

	#decorar_texto {
		text-decoration: underline;
	}

